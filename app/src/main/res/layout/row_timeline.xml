<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/timeLineLayoutUpper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/timeLineImageIcon"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/timeLineTextUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:text="username"
            android:textSize="8sp"
            android:textColor="#EEEEEE" />

        <TextView
            android:id="@+id/timeLineTextId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="id"
            android:textSize="8sp"
            android:textColor="#EEEEEE" />

        <TextView
            android:id="@+id/timeLineTextTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="time"
            android:textSize="10sp"
            android:gravity="right"
            android:paddingRight="8dp"
            android:textColor="#EEEEEE" />
    </LinearLayout>

    <TextView
        android:id="@+id/timeLineTextTweet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/timeLineLayoutUpper"
        android:layout_below="@+id/timeLineLayoutUpper"
        android:text="tweet"
        android:textColor="#FFFFFF"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/timeLineImageIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentLeft="true" />

</RelativeLayout>